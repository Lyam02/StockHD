@model StockLibrary.Models.Asset
@using StockLibrary.Models
@using StockLibrary.Data

<form asp-action="Edit_Asset">
    <div class="mb-3">

        <div class="form-floating mb-3">
            <select class="form-control" name="AssetTypeSelect">
                @foreach (AssetType a in ViewBag.AssetTypes)
                {
                    if (Model.AssetType.Id == a.Id)
                    {

                        <option value="@a.Id" selected>@a.Name</option>
                    }
                    else
                    {
                        <option value="@a.Id">@a.Name</option>
                    }
                }
            </select>
            <label asp-for="AssetType"></label>
            <span asp-validation-for="AssetType" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <select class="form-control" name="LocationSelect">
                @foreach (Location l in ViewBag.Locations)
                {
                    if (Model.Location.Id == l.Id)
                    {
                        <option value="@l.Id" selected>@l.Name</option>
                    }
                    else
                    {
                        <option value="@l.Id">@l.Name</option>
                    }
                }
            </select>
            <label asp-for="Location"></label>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Manufacturer" class="form-control" placeholder="" />
            <label asp-for="Manufacturer">Constructeur</label>
        </div>

        <div class="form-floating mb-3">
            <select class="form-control" name="SrNumberSelect">
                @foreach (SrNumber a in ViewBag.SrNumber)
                {
                    if (Model.SrNumber.SerialNumber == a.SerialNumber)
                    {

                        <option value="@a.SerialNumber" selected>@a.SerialNumber</option>
                    }
                    else
                    {
                        <option value="@a.SerialNumber">@a.SerialNumber</option>
                    }
                }
            </select>
            <label asp-for="SrNumber"></label>
            <span asp-validation-for="SrNumber" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <select class="form-control" name="CorpuserSelect">
                @foreach (CorpUser c in ViewBag.CorpUser)
                {
                    if (Model.CorpUser.CK == c.CK)
                    {
                        <option value ="@c.CK" selected>@c.CK</option>
                    }
                    else
                    {
                        <option value="@c.CK">@c.CK</option>
                    }
                }
            </select>
            <label asp-for="CorpUser"></label>
            <span asp-validation-for="CorpUser" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Description" class="form-control" placeholder="" />
            <label asp-for="Description">Description</label>
        </div>

    </div>

    <input id="submit" type="submit" value="Modifier" class="btn btn-primary" />
    <a class="btn btn-danger" asp-action="Index">Annuler</a>

</form>