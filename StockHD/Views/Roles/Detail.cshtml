@model MV_RoleUsers;


@{
    ViewData["Title"] = "User Rôle";
}

<div class="mb-5 me-5 m-3">

    <h1 class="display-4 text-center">User Rôle</h1>

</div>

<hr class="mb-5" />

<div class="mb-5">
    <h2><strong>@Html.DisplayFor(model => model.Role.NormalizedName)</strong></h2>
</div>

<div class="mt-3" style="display:inline">
    <div class="mb-4" style="margin-right:60%">

        <div class="p-0 m-1 mb-3" style="float: right">
            <a class="btn btn-primary" style="margin-right : 100%" href="@Url.Action("AddUser")">+</a>
        </div>
    </div>
    <div style="margin-right:70%">
        <table class="table table-striped">


            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(Model => Model.Users)</th>
                
                </tr>
            </thead>

            <tbody>
                @{
                    foreach (var item in Model.Users)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>