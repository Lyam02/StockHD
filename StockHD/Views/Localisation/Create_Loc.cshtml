@model StockLibrary.Models.Location;
@using StockLibrary.Models;
@using StockLibrary.Data;


<form asp-action="Create_Loc">

    <div class="mb-3 MargTop">

        <div class="form-floating mb-3">

            <input asp-for="Name" class="form-control" placeholder="" />
            <label asp-for="Name">Localisation</label>
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>

        <div class="form-floating mb-3">

            <input asp-for="Description" class="form-control" placeholder=""/>
            <label asp-for="Description" ></label>
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>

    </div>

    <input id="submit" type="submit" value="Ajouter" class="btn btn-primary" />
    <a class="btn btn-danger" asp-action="Index">Annuler</a>

</form>