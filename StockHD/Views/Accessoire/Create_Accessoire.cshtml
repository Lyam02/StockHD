@model StockLibrary.Models.Accessoire

<link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />

<!--Création d'un formulaire de création d'un Asset avec un AssetType -->

<form asp-action="Create_Accessoire" id="formData" class="styled-form">

    <div class="mb-3 MargTop">

        <div class="form-floating mb-2">
            <input asp-for="Name" class="form-control" placeholder="" />
            <label asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-floating mb-2">
            <input asp-for="Quantite" type="number" class="form-control" placeholder="" />
            <label asp-for="Quantite"></label>
            <span asp-validation-for="Quantite" class="text-danger"></span>
        </div>

        <input type="submit" value="Ajouter" class=" bouton btn btn-primary" />
        <a asp-action="Index" class="bouton btn btn-danger">Annuler</a>
        
    </div>

</form>