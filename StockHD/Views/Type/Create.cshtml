@model StockHD.Models.AssetType;

@using StockHD.Models;
@using StockHD.Data;


    <form asp-action="Create">

    <div class="form-floating mb-3">
    <input asp-for="Name" class="form-control" placeholder="" />
        <label asp-for="Name" class="control-label"></label>
    </div>

    <div id="PropDiv">
        <div class="form-floating mb-3">
            <select class="form-control" name="TypeSelect" placeholder="">
            <option selected=""></option>
            @foreach (ExtendedProperty p in ViewBag.ExtendedProperty){
                <option value="@p.Id">@p.Name</option>
            }
            </select>
            <label asp-for="Properties"></label>
            <span asp-validation-for="Properties" class="text-danger"></span>
        </div>

    </div>

    <div class="mb-3">
        <button type="button" id="Prop" class="btn btn-success" data-bs-toggle="tooltip" data-bs-placement="right"
                data-bs-title="Vous pouvez ajoutez d'autres Propriété en cliquant ici !">
            +
        </button>
    </div>

    <div class="form-floating mb-3">
    <input asp-for="Description" class="form-control" placeholder="" />
    <label asp-for="Description" class="control-label"></label>
    <span asp-validation-for="Description" class="text-danger"></span><br/>
    </div>


    <input id="submit" type="submit" value="Ajouter" class="btn btn-primary" />
    <a class="btn btn-danger" asp-action="Index">Annuler</a>
     
    </form>

    <script>
            const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
            const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
    </script>
    
    <script>
   $(document).ready(function (){
        
            var properties = [];
        $.getJSON('@Url.Action("GetProperties", "Type")', function(data){
            properties = data;
        });

        //Ajouter un champ dynamique au clic du bouton
         $('#Prop').click(function(){
        var select = '<div class="form-floating mb-3">' +
                     '<select class="form-control" name="TypeSelect" placeholder="">';
        
             //Ajouter les options du menu déroulant
            $.each(properties, function(index, properties){
            select += '<option value=' + properties.Id + '>' + properties.Name + '</option>';
            });
             select += '</select>' +
                       '<label asp-for="Properties"></label>' +
                       '<span asp-validation-for="Properties" class="text-danger"></span>' +
                       '</div>';
         $('#PropDiv').append(select);
        });

   });
    </script>


