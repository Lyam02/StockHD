@model IEnumerable<StockHD.Models.SrNumber>


@{
    ViewData["Title"] = "Numéro de série";
}

<h1 class="display-4 text-center">Numéro de série</h1>

<div class="mt-3" style="display:inline">
    <div class="" style="margin-right:65%">

        <div class="p-0 m-1 mb-3" style="float: right">
            <a class="btn btn-primary" style="margin-right : 100%" href="@Url.Action("Create_SrNumber")">Nouveau</a>
        </div>
    </div>

    <div style="margin-right:75%">
        <table class="table table-striped">


            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(Model => Model.SerialNumber)</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.SerialNumber)</td>
                            <td>
                                <a href="@Url.Action("Edit_SrNumber", "SrNumber", new{id = item.SerialNumber})">Modifier</a> |
                                <a href="@Url.Action("Delete_SrNumber", "SrNumber", new{id = item.SerialNumber})">Supprimer</a><br>
                                | <a href="@Url.Action("Detail_SrNumber", "SrNumber", new{id = item.SerialNumber})">Detail</a>
                                @* 
                            Permet d'indiquer l'action, le controlleur et la valeur
                            ca crée ensuite une url en fonction de la nomenclature du Startup
                            *@
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>
