@model List<AlertAsset>

@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bienvenue chez ING France</title>
</head>
<body>

<div class="container mt-3 " style="margin-right : 80%">
    <div class="banner">
        <img src="/css/picture/ING-Accueil.jpg" alt="Bienvenue chez ING France">
        <div class="text-overlay">
            <span>Bienvenue</span>
            <span>au HelpDesk ING France !</span>
        </div>
    </div>
</div>

</body>
</html>



<div id="alertContainer">
    @foreach (var alert in Model)
    {
        if (alert.StockAssetCount == 0)
        {
            <div class="alert alert-warning">
                <strong>Attention :</strong> Il n'y a plus de "@alert.AssetTypeName" en Stock.
            </div>
        }
        else if (alert.StockAssetCount == 1)
        {
            <div class="alert alert-info">
                <strong>Attention :</strong> Il ne reste plus qu'un "@alert.AssetTypeName" en Stock.
            </div>
        }
    }
</div>

<style>
    .alert {
        background-color: #f8d7da;
        color: #721c24;
        padding: 15px;
        margin: 10px 0;
        border: 1px solid #f5c6cb;
        border-radius: 5px;
        font-weight: bold;
    }
</style>


<style>
        .banner {

            position: relative;
            text-align: left;
            
        }
        .banner img {
            width: 100%;
            border-radius: 10px;
        }
        .text-overlay {
            position: absolute;
            top: 20%;
            left: 10%;
        }
        .text-overlay span {
            display: block;
            background-color: #ff6600;
            color: white;
            font-size: 1.5rem;
            font-weight: bold;
            padding: 10px 15px;
            border-radius: 5px;
            margin-bottom: 5px;
            width: fit-content;
        }
    </style>

