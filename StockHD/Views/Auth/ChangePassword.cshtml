@model StockLibrary.Models.Auth.ResetPassword;

@using StockLibrary.Models;
@using StockLibrary.Data;

<link rel="stylesheet" href="~/lib/bootstrap-5.3.3-dist/css/bootstrap.min.css" />
<link href="~/lib/bootstrap-icons-1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
<script src="~/lib/bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js"></script>

@{
    Layout = null;
}


<section class="vh-100 bg-image">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3" style="background-color : darkgray">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <img src="~/css/picture/ingfr.jpg" style="width : 70px; height : 70px; border-radius : 10px" />
                            <h2 class="text-uppercase text-center mb-5">Réinitialisation du Mot de passe</h2>


                            <form asp-action="ChangePassword">

                                <div data-mdb-input-init class="form-floating mb-3">
                                    <input asp-for="Email" type="email" id="form3Example3cg" class="form-control form-control-lg" placeholder="" />
                                    <label asp-for="Email" class="form-label" for="form3Example3cg"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div data-mdb-input-init class="form-floating mb-3">
                                    <input asp-for="Password" type="password" id="form3Example3cg" class="form-control form-control-lg" placeholder="" />
                                    <label asp-for="Password" class="form-label" for="form3Example3cg"></label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div data-mdb-input-init class="form-floating mb-3">
                                    <input asp-for="ConfirmPassword" type="password" id="form3Example3cg" class="form-control form-control-lg" placeholder="" />
                                    <label asp-for="ConfirmPassword" class="form-label" for="form3Example3cg"></label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <input type="submit" name="Confirmer" style="background-color : #FF6200" data-mdb-button-init
                                           data-mdb-ripple-init class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                    </input>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Déjà membre ? <a asp-controller="Auth" asp-action="SignInUser" class="fw-bold text-body"><u>Connectez-vous ici</u></a>
                                </p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>